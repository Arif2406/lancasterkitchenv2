<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.Orders">
    <Text text="Orders Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TableView fx:id="ordersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dishNameColumn" prefWidth="140.0" text="Dish Name"/>
            <TableColumn fx:id="quantityColumn" prefWidth="80.0" text="Quantity"/>
            <TableColumn fx:id="commentsColumn" prefWidth="150.0" text="Comments"/>
            <TableColumn fx:id="orderNumberColumn" prefWidth="200.0" text="Order Number"/>
        </columns>
    </TableView>
    <Button text="Finalize Order" onAction="#processOrder"/>
    <Button text="Update Stock Only" onAction="#updateStock"/>
</VBox>


