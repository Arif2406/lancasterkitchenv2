<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.Orders">
    <children>
    <Button fx:id="chefsButton" mnemonicParsing="false" onAction="#handleChefsButtonClick" prefHeight="51.0" prefWidth="100.0" style="-fx-background-color: #445055; -fx-border-color: #FFFFFF;" text="Chefs" textFill="#d9d9d9">
        <font>
            <Font name="Times New Roman Bold" size="16.0" />
        </font>
    </Button>
    <Button fx:id="dishesButton" mnemonicParsing="false" onAction="#handleDishesButtonClick" prefHeight="51.0" prefWidth="100.0" style="-fx-background-color: #2B3336; -fx-border-color: #d9d9d9;" text="Dishes" textFill="#d9d9d9">
        <font>
            <Font name="Times New Roman Bold" size="16.0" />
        </font>
    </Button>
    <Button fx:id="ordersButton" mnemonicParsing="false" onAction="#handleOrdersButtonClick" prefHeight="51.0" prefWidth="100.0" style="-fx-background-color: #2B3336; -fx-border-color: #FFFFFF;" text="Orders" textFill="#d9d9d9">
        <font>
            <Font name="Times New Roman Bold" size="16.0" />
        </font>
    </Button>
    <Button fx:id="menusButton" mnemonicParsing="false" onAction="#handleMenusButtonClick" prefHeight="51.0" prefWidth="100.0" style="-fx-background-color: #2B3336; -fx-border-color: #FFFFFF;" text="Menus" textFill="#d9d9d9">
        <font>
            <Font name="Times New Roman Bold" size="16.0" />
        </font>
    </Button>
    <Button fx:id="stockButton" mnemonicParsing="false" onAction="#handleStockButtonClick" prefHeight="51.0" prefWidth="100.0" style="-fx-background-color: #2B3336; -fx-border-color: #FFFFFF;" text="Stock" textFill="#d9d9d9">
        <font>
            <Font name="Times New Roman Bold" size="16.0" />
        </font>
    </Button>
    <Button fx:id="supplierButton" mnemonicParsing="false" onAction="#handleSupplierButtonClick" prefHeight="55.0" prefWidth="100.0" style="-fx-background-color: #2B3336; -fx-border-color: #FFFFFF;" text="Supplier" textFill="#d9d9d9">
        <font>
            <Font name="Times New Roman Bold" size="16.0" />
        </font>
    </Button>
    <Button fx:id="wasteButton" mnemonicParsing="false" onAction="#handleWasteButtonClick" prefHeight="51.0" prefWidth="100.0" style="-fx-background-color: #2B3336; -fx-border-color: #FFFFFF;" text="Waste" textFill="#d9d9d9">
        <font>
            <Font name="Times New Roman Bold" size="16.0" />
        </font>
    </Button>
</children>


    <Text text="Orders Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TableView fx:id="ordersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dishNameColumn" prefWidth="140.0" text="Dish Name"/>
            <TableColumn fx:id="quantityColumn" prefWidth="80.0" text="Quantity"/>
            <TableColumn fx:id="commentsColumn" prefWidth="150.0" text="Comments"/>
            <TableColumn fx:id="orderNumberColumn" prefWidth="200.0" text="Order Number"/>
        </columns>
    </TableView>
    <Button text="Finalize Order" onAction="#processOrder"/>
    <Button text="Update Stock Only" onAction="#updateStock"/>
</VBox>


