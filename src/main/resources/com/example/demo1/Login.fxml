<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.LoginController">
    <children>
        <BorderPane>
            <right>
                <VBox alignment="CENTER" prefHeight="344.0" prefWidth="331.0" spacing="10.0" style="-fx-background-color: #445055; -fx-border-color: #FFFFFF;" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Login" textFill="#d9d9d9" underline="true">
                            <font>
                                <Font name="Times New Roman" size="24.0" />
                            </font>
                        </Label>
                        <TextField fx:id="usernameField" prefHeight="26.0" prefWidth="256.0" promptText="Username" />
                        <PasswordField fx:id="passwordField" promptText="Password" />
                        <Button onAction="#handleLoginButton" style="-fx-background-color: #2B3336; -fx-border-color: #FFFFF;" text="Login" textFill="#d9d9d9" />
                          <Label fx:id="timeLabel" text="Time" textFill="#d9d9d9" translateY="60.0">
                     <font>
                        <Font name="Times New Roman" size="14.0" />
                     </font></Label>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </right>
            <left>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <BorderPane prefHeight="360.0" prefWidth="200.0" style="-fx-border-color: #FFFFFF; -fx-background-color: #2B3336;">
                            <center>
                                <Label alignment="CENTER" prefHeight="100.0" prefWidth="1721.0" style="-fx-background-color: #2B3336;" text="Lancaster Kitchen" textFill="#d9d9d9" translateY="25.0" underline="true" BorderPane.alignment="CENTER">
                                    <font>
                                        <Font name="Times New Roman Bold" size="18.0" />
                                    </font>
                                </Label>
                            </center>
                            <bottom>
                                <ImageView fitHeight="108.0" fitWidth="164.0" pickOnBounds="true" preserveRatio="true" translateY="-75.0" BorderPane.alignment="CENTER">
                                    <image>
                                        <Image url="@../../../../java/images/Lancasters-logos.jpeg" />
                                    </image>
                                </ImageView>
                            </bottom>
                        </BorderPane>
                    </children>
                </AnchorPane>
            </left>
        </BorderPane>
    </children>
</AnchorPane>
