<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<BorderPane minHeight="1080.0" minWidth="1920.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.Dishes">
    <top>
        <AnchorPane prefHeight="70.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="324.0" layoutY="39.0" text="Manage Dishes" textFill="#fff" textAlignment="CENTER">
                    <font>
                        <Font size="50.0" />
                    </font>
                </Label>
            </children>
            <stylesheets>
                <URL value="@style.css"/>
            </stylesheets>
        </AnchorPane>
    </top>
    <center>
        <FlowPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" hgap="10" vgap="10" alignment="CENTER">
            <children>
                <Button fx:id="viewCurrentDishesButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="250.0" text="Current dishes on the menu" onAction="#handleViewCurrentDishes" />
                <Button fx:id="addNewDishButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="250.0" text="Add a new Dish" />
                <Button fx:id="viewPendingDishesButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="250.0" text="Pending for approval dishes" />
                <Button fx:id="viewAllDishesButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="250.0" text="All the dishes" />
                <Button fx:id="homeButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="250.0" text="Home Page" />
            </children>
        </FlowPane>
    </center>
</BorderPane>
