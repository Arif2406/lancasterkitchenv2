<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.time.LocalDate?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.AddWasteController" prefHeight="400.0" prefWidth="600.0">
    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #2B3336;">
            <Label text="Add Waste Log Entry" textFill="#FFFFFF">
                <font>
                    <Font size="20" />
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <VBox spacing="10" padding="15">
            <HBox spacing="10">
                <Label text="Ingredient:" />
                <ComboBox fx:id="ingredientComboBox" prefWidth="200" />
            </HBox>
            <HBox spacing="10">
                <Label text="Quantity Wasted:" />
                <TextField fx:id="quantityField" />
            </HBox>
            <HBox spacing="10">
                <Label text="Unit:" />
                <TextField fx:id="unitField" editable="false" />
            </HBox>

            <HBox spacing="10">
                <Label text="Date of Waste:" />
                <DatePicker fx:id="dateField">
                    <value>${LocalDate.now()}</value>
                </DatePicker>
            </HBox>
            <HBox spacing="10">
                <Label text="Reason:" />
                <TextField fx:id="reasonField" />
            </HBox>
            <HBox alignment="CENTER_RIGHT">
                <Button text="Submit" onAction="#submit" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
